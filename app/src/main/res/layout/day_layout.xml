<?xml version="1.0" encoding="utf-8"?>

<com.mohammadreza.salari.shcalandar.DayView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"

    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <com.mohammadreza.salari.shcalandar.Views.MyTextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28"
        android:textSize="@dimen/day_text_size"
        android:textStyle="bold"
       />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/dayTextUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="dayTextUp"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <View

            android:layout_width="5dp"

            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/dayTextDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="dayTextDown"
            android:textAlignment="gravity"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgVacation"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:src="@drawable/bg_btn_calendar_pressed"
        android:visibility="invisible" />
</com.mohammadreza.salari.shcalandar.DayView><!--
android:textColor="@color/text_calendar"-->
